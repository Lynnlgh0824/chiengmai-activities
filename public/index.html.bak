        // è§£æ weekdays æ•°ç»„è·å– day æ•°å­—
        function parseDayFromWeekdays(weekdays) {
            if (!weekdays || !Array.isArray(weekdays)) return null;

            const dayMap = { 'å‘¨æ—¥': 0, 'å‘¨ä¸€': 1, 'å‘¨äºŒ': 2, 'å‘¨ä¸‰': 3, 'å‘¨å››': 4, 'å‘¨äº”': 5, 'å‘¨å…­': 6 };

            // è¿”å›ç¬¬ä¸€ä¸ªåŒ¹é…çš„ day
            for (let day of weekdays) {
                if (dayMap[day] !== undefined) {
                    return dayMap[day];
                }
            }
            return null;
        }

        function parseDaysFromWeekdays(weekdays) {
            if (!weekdays || !Array.isArray(weekdays)) return [];

            const dayMap = { 'å‘¨æ—¥': 0, 'å‘¨ä¸€': 1, 'å‘¨äºŒ': 2, 'å‘¨ä¸‰': 3, 'å‘¨å››': 4, 'å‘¨äº”': 5, 'å‘¨å…­': 6 };

            // è¿”å›æ‰€æœ‰åŒ¹é…çš„ day
            const days = [];
            for (let weekday of weekdays) {
                if (dayMap[weekday] !== undefined) {
                    days.push(dayMap[weekday]);
                }
            }
            return days;
        }

        /**
         * åˆ¤æ–­æ—¶é—´æ˜¯å¦ä¸ºå…·ä½“æ—¶é—´æ ¼å¼ï¼ˆå¦‚ 09:30-10:30ï¼‰
         * @param {string} time - æ—¶é—´å­—ç¬¦ä¸²
         * @returns {boolean} - æ˜¯å¦ä¸ºå…·ä½“æ—¶é—´æ ¼å¼
         */
        function isSpecificTimeFormat(time) {
            if (!time || typeof time !== 'string') return false;

            // åŒ¹é…æ ¼å¼ï¼šæ•°å­—:æ•°å­—-æ•°å­—:æ•°å­—
            // ä¾‹å¦‚ï¼š09:30-10:30, 8:00-18:00, 19:00-23:00
            const timePattern = /^\d{1,2}:\d{2}-\d{1,2}:\d{2}/;
            return timePattern.test(time);
        }

